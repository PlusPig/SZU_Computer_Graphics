{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ (Release Static)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",          
                "-O2",                 
                "-static",             
                "main.cpp",            
                "-o", "main.exe",      
                "-lfreeglut",          
                "-lopengl32",          
                "-lglu32",             
                "-lglfw3"              
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
